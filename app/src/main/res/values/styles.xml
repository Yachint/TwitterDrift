<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="android:windowBackground">@drawable/splash_screen_dark</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="primaryText">@color/darkPrimaryText</item>
        <item name="primaryBackground">@color/darkPrimaryBg</item>
        <item name="secondaryBackground">#303030</item>
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorAccent">@color/colorPink</item>
        <item name="tertiaryBackground">#F1F1F1</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="secondaryText">#f5f5f5</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LightTheme" parent="AppTheme">
<!--        <item name="android:windowBackground">@drawable/splash_screen_light</item>-->
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="primaryText">@color/lightPrimaryText</item>
        <item name="primaryBackground">@color/lightPrimaryBg</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorAccent">@color/colorPurpule</item>
        <item name="secondaryText">#6c7a86</item>
        <item name="secondaryBackground">#F0F0F0</item>
        <item name="tertiaryBackground">#D3D3D3</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:actionMenuTextColor">@color/lightPrimaryText</item>
        <item name="colorPrimaryDark">@android:color/white</item>
    </style>

    <style name="DarkTheme" parent="AppTheme">
<!--        <item name="android:windowBackground">@drawable/splash_screen_dark</item>-->
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="primaryText">@color/darkPrimaryText</item>
        <item name="primaryBackground">@color/darkPrimaryBg</item>
        <item name="colorPrimary">@android:color/black</item>
        <item name="secondaryText">#C0C0C0</item>
        <item name="tertiaryBackground">#808080</item>
        <item name="colorAccent">@color/colorPink</item>
        <item name="android:actionMenuTextColor">@color/darkPrimaryText</item>
        <item name="secondaryBackground">#303030</item>
        <item name="colorPrimaryDark">@android:color/black</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

</resources>